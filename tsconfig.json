{
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "strict": true,
    "outDir": "./dist",
    "isolatedModules": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.d.ts", "dist/**/*"]
}
